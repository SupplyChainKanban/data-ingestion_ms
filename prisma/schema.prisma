generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model DataSource {
  id Int @id @default(autoincrement())
  name String
  description String
  sourceType String
  // connectionDetails Unsupported("json")
  frequency String
  status String

  available Boolean @default(true)
  lastAccessed DateTime @default(now())
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([available])
}

model RawData {
  id Int @id @default(autoincrement())
  dataSchemaVersion String
  ingestedBy String
  priority String
  available Boolean @default(true)
  lastAccessed DateTime @default(now())
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([available])
}
